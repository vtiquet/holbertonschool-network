#!/usr/bin/env bash
# Configures local host resolution in /etc/hosts for container environments

HOSTS_CONTENT=$(sed 's/127.0.0.1\tlocalhost/127.0.0.2\tlocalhost/' /etc/hosts)
echo "$HOSTS_CONTENT" | sudo tee /etc/hosts > /dev/null

if ! grep -q "facebook.com" /etc/hosts; then
    echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
fi
